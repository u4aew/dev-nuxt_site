$paragraph
,
table,
blockquote,
ol,
ul,
p {
  margin-bottom $margin-paragraph

  &:last-child {
    margin-bottom 0
  }
}

img {
  max-width 100%
}

i, em {
  font-style italic
}

b, strong {
  font-weight 500
}

.link,
a {
  transition $transition-fast
  text-decoration none
  color $color-link

  &:hover {
    color $color-primary
  }

  &:active, &.is-active {
    color $color-primary-dark
  }
}


a[href^='tel:']:not([class]) {
  border-bottom-width 0
  color inherit
  white-space nowrap
  text-decoration none
}


ol {
  counter-reset nums
  list-style none

  li {
    counter-increment nums
    list-style-type none
    position relative
    margin-bottom 25px
    padding-left 35px

    &::before {
      content counter(nums) '.'
      position absolute
      left 0
      color $color-primary
    }

    &:last-child {
      margin-bottom 0
    }
  }
}


ul {
  li {
    position relative
    margin-bottom 25px
    padding-left 25px

    &::before {
      content ''
      display block
      position absolute
      left 0
      top 5px
      size 7px
      background-color $color-primary
    }

    &:last-child {
      margin-bottom 0
    }
  }
}
+do(750) {
  ul {
    li {
      position relative
      margin-bottom 17px
      padding-left 20px
    }
  }
}
* {
  min-width 0
  min-height 0
}
