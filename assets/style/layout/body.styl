* {
  min-width 0
}

html,
body {
  min-width 320px
  height 100%
}

html {
  -webkit-tap-highlight-color rgba(#000, 0)
}

body {
  cursor default
  -moz-osx-font-smoothing: grayscale
  -webkit-font-smoothing: antialiased
  -webkit-text-size-adjust: 100%
  overflow-y scroll
  color $color-main
  font-family $font-main
  font-size $size-main
  line-height $line-main
  display flex
  background-color $color-8
}

+do(500) {
  body {
    font-size 15px
    line-height 1.2
  }
}

#__nuxt {
  flex 1
  display flex
}

#__layout {
  display flex
  flex 1
}

.app-body {
  flex 1
  display flex
  flex-direction column

  &__wrapper {
    overflow hidden
    flex 1 0 auto
    display flex
    flex-direction column
    position relative
  }

  &__header,
  &__footer,
  &__content {
    flex 0 0 auto
  }

  &__content {
    flex-grow 1
    display flex
    padding-left 20px
    padding-right 20px
  }

  &__footer {
    margin-top auto
  }
}

.app-content {
  display flex
  box-sizing border-box
  flex 1
  &__sidebar {
    width 240px
    padding-top 20px
    box-sizing border-box
    padding-left 0
    margin-right 20px
    //position: sticky;
    //top: 60px;
    //height: calc(100vh - 60px);
  }

  &__main {
    box-sizing border-box
    flex-grow: 1;
    min-width: 0;
  }

  &__additional {
    width 300px
    background-color $color-3
    color $color-main
    padding-top 20px
    position relative
    box-sizing border-box
    margin-left 20px
    &:before {
      content ''
      position absolute
      top 0
      left 0
      bottom 0
      right -100vw
      background-color $color-3
      z-index -1
    }
  }
}

+do(1200) {
 .app-content {
   &__additional {
     width 265px
   }
   &__sidebar {
     width 220px
   }
 }
}

+do(1000) {
  .app-content {
    &__additional {
      display none
    }
    &__sidebar {
      display none
    }
  }
}
