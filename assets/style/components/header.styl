.header {
  padding-top 10px
  padding-bottom 10px
  color white
  background: linear-gradient(90deg, #51A1FF 12.94%, #CB8FF4 26.21%, #A5F4FF 41.35%, #89A2FA 60.65%, #6DAFFC 77.63%);
  min-height 48px
  padding-left 20px
  padding-right 20px
  box-sizing border-box
  display flex
  align-items center
  position fixed
  left 0
  right 0
  top 0
  z-index 99
  &__wrapper {
    margin 0 auto
    flex 1
  }

  &__content {
    display flex
    margin-left -5px
    margin-right -5px
    align-items center

    &-side {
      margin-right 5px
      margin-left 5px
      flex 0 0 auto
    }

    &-main {
      margin-right 5px
      margin-left 5px
      flex 1
    }
  }

  &__logo {
    display block
    color white
    font-weight 700
    use-size(20)
    outline none

    img {
      display block
    }

    &:hover {
      opacity 0.8
    }

    &:active {
      opacity 0.6
    }
  }

  &__item {
    &_menu {
      display none
    }
  }

  &__info {
    display flex
    align-items center

    &-side {
      flex 0 0 auto
      margin-right 60px
    }

    &-main {
      flex 1
    }
  }

  &__menu {
    width 20px
    height 20px
    background-image url('assets/images/ui/menu.svg')
    background-repeat no-repeat
    background-size cover
  }

  &__nav {
    color: white;

    &-list {
      display flex
      align-items center
      margin-left -10px
      margin-right -10px
    }

    &-item {
      margin-left 10px
      margin-right 10px
    }

    &-link {
      font-weight 500
      color white !important
      text-decoration none
    }
  }
}

+do(1000) {
  .header {
    &__item {
      &_search {
        display none
      }

      &_menu {
        display block
      }
    }
  }
}
