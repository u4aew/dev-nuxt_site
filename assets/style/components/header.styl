.header {
  padding-top 10px
  padding-bottom 10px
  margin-bottom 30px
  color white !important
  background-color #556ADB
  min-height 48px
  display flex
  align-items center
  &__content {
    display flex
    margin-left -5px
    margin-right -5px
    align-items center

    &-side {
      margin-right 5px
      margin-left 5px
      flex 0 0 auto
    }

    &-main {
      margin-right 5px
      margin-left 5px
      flex 1
    }
  }

  &__logo {
    display block
    color white
    img {
      display block
    }
  }

  &__info {
    display flex
    align-items center

    &-side {
      flex 0 0 auto
      margin-right 60px
    }

    &-main {
      flex 1
    }
  }

  &__nav {
    color: white;
    &-list {
      display flex
      align-items center
      margin-left -10px
      margin-right -10px
    }

    &-item {
      margin-left 10px
      margin-right 10px
    }

    &-link {
      font-weight 500
      color white !important
      text-decoration none
    }
  }
}
