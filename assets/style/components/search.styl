.search {
  position relative
  &:before {
    content ''
    position absolute
    top -14px
    bottom -14px
    left 0
    right -100vw
    background-color $color-primary
  }
  &__wrapper {
    position relative
    z-index 5
    padding-left 50px
  }
  &__input {
    background transparent
    color white
    border none
    &::-webkit-input-placeholder { /* Chrome/Opera/Safari */
      color white
    }
    &::-moz-placeholder { /* Firefox 19+ */
      color white
    }
    &:-ms-input-placeholder { /* IE 10+ */
      color white
    }
    &:-moz-placeholder { /* Firefox 18- */
      color white
    }
    &:focus {
      outline none
      border none
    }
  }
}
