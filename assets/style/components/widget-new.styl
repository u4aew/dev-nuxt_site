.widget-new {
  color $color-4
  padding-left 20px
  padding-right 20px
  box-sizing border-box

  &__title {
    font-weight 700
  }

  &__header {
    &-wrapper {
      display flex
    }

    &-side {
      flex 1
    }

    &-main {
      flex 0 0 auto
      margin-right 10px
    }
  }

  &__main {

  }

  &__side {
    padding-bottom 11px
    margin-bottom 15px
    border-bottom 1px solid $color-4
  }

  &__item {
    margin-bottom 10px
    display block
    color $color-4

    &-wrapper {
      display flex
    }

    &-side {
      flex 0 0 auto
      margin-right 20px
    }

    &-main {
      flex 1
      max-height 2.6em
      overflow hidden
      text-overflow ellipsis
    }
  }
}

+do(1200) {
  .widget-new {
    &__header {
      &-wrapper {
        display block
      }
    }

    &__item {
      &-wrapper {
        display block
      }

      &-side {
        margin-right 0
        margin-bottom 5px
      }
    }
  }
}
